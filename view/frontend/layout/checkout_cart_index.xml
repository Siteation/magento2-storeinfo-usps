    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="cart.summary">
            <block
                name="storeinfo.usps.cart"
                template="Siteation_StoreInfoUsps::luma/cart/usps.phtml"
                after="checkout.cart.methods.bottom"
            >
                <arguments>
                    <argument name="viewModelStoreInfo"
                        xsi:type="object">Siteation\StoreInfoUsps\ViewModel\StoreInfoUsps</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
